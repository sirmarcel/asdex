{
  "permissions": {
    "allow": [
      "Bash(uv run ruff --fix .)",
      "Bash(uv run ty check)",
      "Bash(uv run pytest:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -e '.tool_input.file_path | endswith(\".py\")' > /dev/null && uv run ruff check --fix . && uv run ty check",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
